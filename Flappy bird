const canvas = document.getElementById('canvas');
const ctx = canvas.getContext('2d');

// Set canvas dimensions
canvas.width = 320;
canvas.height = 480;

// Load images
const bird = new Image();
const bg = new Image();
const fg = new Image();
const pipeNorth = new Image();
const pipeSouth = new Image();

bird.src = "https://www.example.com/bird.png"; // Replace with the actual URL
bg.src = "https://www.example.com/bg.png"; // Replace with the actual URL
fg.src = "https://www.example.com/fg.png"; // Replace with the actual URL
pipeNorth.src = "https://www.example.com/pipeNorth.png"; // Replace with the actual URL
pipeSouth.src = "https://www.example.com/pipeSouth.png"; // Replace with the actual URL

const gap = 85;
const constant = pipeNorth.height + gap;

// Bird position
let bX = 10;
let bY = 150;

// Gravity
